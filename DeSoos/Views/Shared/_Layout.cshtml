<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeSoos</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Oswald' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav>
            <div class="nav_inner">
                <div class="nav_left">
                    <div class="button_wrapper">
                        <a href="/">
                            <img class="nav_left_logo" src="~/img/SoosLogo.svg" alt="Soos Logo" />
                        </a>
                    </div>
                </div>
                <div class="nav_right">
                    <div class="button_wrapper">
                        <a class="nav_right_button" href="/Agenda"><i class="fa-solid fa-calendar-days"></i> Agenda</a>
                    </div>
                    <div class="button_wrapper">
                        <a class="nav_right_button" href="/Photo"><i class="fa-solid fa-camera"></i> Foto's</a>
                    </div>
                    <div class="button_wrapper">
                        <a class="nav_right_button" href="/Info"><i class="fa-solid fa-circle-info"></i> Info</a>
                    </div>
                    <div class="button_wrapper">
                        <a class="nav_right_button" href="/Contact"><i class="fa-solid fa-address-book"></i> Contact</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <div class="contact">
        <div class="contact_bar"></div>
        <div class="contact_left">
            <p class="contact_header">Lorem ipsum dolor sit amet</p>

        </div>
        <div class="contact_right">
            <p class="contact_header">Lorem ipsum dolor sit amet</p>

        </div>
    </div>
    <footer>
        <div class="footer_inner">
            <div class="footer_left">
                <p class="footer_left_disclaimer">© 2022 SJWA De Soos. All Rights Reserved.</p>
            </div>
            <div class="footer_right">
                <div class="button_wrapper">
                    <a class="footer_right_button" target="_blank" href="https://www.facebook.com/desoosalmkerk"><i class="fa-brands fa-facebook"></i></a>
                </div>
                <div class="button_wrapper">
                    <a class="footer_right_button" target="_blank" href="https://www.instagram.com/soos_almkerk/?hl=nl"><i class="fa-brands fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
